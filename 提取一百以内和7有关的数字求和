using System;

namespace practice_1._1
{
    class Program
    {
        static void Main(string[] args)
        {
            int sum = 0;
            for (int i = 0; i <= 100; i++)
            {
                if (i % 7 == 0 || i % 10 == 7 || i / 10 == 0)
                {
                    Console.WriteLine(i);
                    sum += i;
                }
            }
            Console.WriteLine("总和为：" + (sum));
        }
    }
}
